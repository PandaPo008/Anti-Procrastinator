{
  "manifest_version": 3,
  "name": "Activity Monitor",
  "version": "1.0",
  "description": "Track website activity",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}